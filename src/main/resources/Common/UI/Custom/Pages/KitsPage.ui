// ============================================================================
// KitsPage.ui - KITS SELECTION MENU (v2.0)
// ============================================================================
// Native Hytale UI for the Kits plugin - Professional Hytale-style design
// Path: src/main/resources/Common/UI/Custom/Pages/KitsPage.ui
// ============================================================================

$C = "../Common.ui";

// ===== ITEM GRID STYLE (Matches Hytale native style) =====

@KitItemGridStyle = ItemGridStyle(
  SlotSize: 50,
  SlotSpacing: 4,
  SlotIconSize: 44,
  SlotBackground: (Color: #1a2332),
  SlotBorderColor: #3d4f5f
);

// ===== CUSTOM STYLES =====

@PageTitleStyle = LabelStyle(
  FontSize: 26,
  RenderBold: true,
  RenderUppercase: true,
  TextColor: #F0E68C,
  HorizontalAlignment: Center,
  LetterSpacing: 2
);

@PageDescriptionStyle = LabelStyle(
  FontSize: 13,
  TextColor: #8899aa,
  HorizontalAlignment: Center,
  Wrap: true
);

@KitNameStyle = LabelStyle(
  FontSize: 24,
  RenderBold: true,
  RenderUppercase: true,
  TextColor: #F0E68C,
  HorizontalAlignment: Center,
  LetterSpacing: 1
);

@KitNameVipStyle = LabelStyle(
  FontSize: 24,
  RenderBold: true,
  RenderUppercase: true,
  TextColor: #FFD700,
  HorizontalAlignment: Center,
  LetterSpacing: 1
);

@KitDescriptionStyle = LabelStyle(
  FontSize: 12,
  TextColor: #96a9be,
  HorizontalAlignment: Center,
  Wrap: true
);

@CooldownLabelStyle = LabelStyle(
  FontSize: 11,
  TextColor: #8899aa,
  HorizontalAlignment: Center
);

@CooldownValueStyle = LabelStyle(
  FontSize: 13,
  RenderBold: true,
  TextColor: #e8a83c,
  HorizontalAlignment: Center
);

@StatusAvailableStyle = LabelStyle(
  FontSize: 13,
  RenderBold: true,
  TextColor: #7dd87d,
  HorizontalAlignment: Center,
  RenderUppercase: true
);

@StatusCooldownStyle = LabelStyle(
  FontSize: 13,
  RenderBold: true,
  TextColor: #d87d7d,
  HorizontalAlignment: Center,
  RenderUppercase: true
);

@SectionHeaderStyle = LabelStyle(
  FontSize: 11,
  RenderBold: true,
  RenderUppercase: true,
  TextColor: #96a9be,
  HorizontalAlignment: Center
);

@SectionHeaderVipStyle = LabelStyle(
  FontSize: 11,
  RenderBold: true,
  RenderUppercase: true,
  TextColor: #e8a83c,
  HorizontalAlignment: Center
);

@ItemNameStyle = LabelStyle(
  FontSize: 9,
  TextColor: #b4c8c9,
  HorizontalAlignment: Center,
  Wrap: true
);

@ItemQtyStyle = LabelStyle(
  FontSize: 10,
  RenderBold: true,
  TextColor: #e8a83c,
  HorizontalAlignment: Center
);

