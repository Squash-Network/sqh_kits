  // ===== CONFIRMATION POPUP (hidden by default) =====
  Group #ConfirmPopup {
    Visible: false;
    Background: #000000(0.85);
    LayoutMode: Middle;

    Group #PopupContainer {
      Anchor: (Width: 380, Height: 220);
      LayoutMode: Top;
      Background: (TexturePath: "../Common/ContainerFullPatch.png", Border: 20);
      Padding: (Full: 30);

      // Success checkmark icon
      Group {
        Anchor: (Height: 50, Bottom: 12);
        LayoutMode: Middle;

        Group {
          Anchor: (Width: 48, Height: 48);
          Background: "Memories/Checkmark.png";
        }
      }

      // Popup title
      Label #PopupTitle {
        Style: (FontSize: 20, RenderBold: true, TextColor: #7dd87d, HorizontalAlignment: Center, RenderUppercase: true);
        Text: "KIT RESGATADO!";
        Anchor: (Height: 28, Bottom: 12);
      }

      // Message
      Label #PopupMessage {
        Style: (FontSize: 13, TextColor: #96a9be, HorizontalAlignment: Center, Wrap: true);
        Text: "Voce recebeu o Kit Basico com sucesso!";
        Anchor: (Height: 35, Bottom: 15);
      }

      // Close button
      Group {
        Anchor: (Height: 42);
        LayoutMode: Middle;

        $C.@SecondaryTextButton #BtnPopupClose {
          @Text = "FECHAR";
          @Anchor = (Width: 130, Height: 36);
        }
      }
    }
  }
